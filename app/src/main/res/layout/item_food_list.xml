<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8dp">

        <ImageView
            android:id="@+id/img_food"
            android:scaleType="centerCrop"
            android:src="@drawable/app_icon"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_food_name"
                android:text="@string/dummy_food_name"
                android:fontFamily="@font/magnifika"
                android:textColor="@color/button_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_food_price"
                android:text="@string/dummy_food_price"
                android:textStyle="italic"
                android:textSize="@dimen/textView_textSize_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_detail"
                android:src="@drawable/ic_info_outline_button_color_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_cart"
                android:src="@drawable/ic_shopping_cart_button_color_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        


    </LinearLayout>

</androidx.cardview.widget.CardView>